<table class="admin plugins list">
	<thead>
		<th class="fixed_name"><?= l('name') ?></th>
		<th class="fixed_author"><?= l('author') ?></th>
		<th class="fixed_version"><?= l('version') ?></th>
		<th class="w-48 text-right"><?= l('actions') ?></th>
	</thead>
	<tbody>
		<?php foreach ($plugins as $plugin) : ?>
			<tr>
				<td><?= $plugin['name'] ?></td>
				<td><?= $plugin['author'] ? $plugin['author'] : '' ?></td>
				<td><?= $plugin['version'] ?></td>
				<td>
					<div class=" btn-group justify-end">
						<?php if ($plugin['installed'] && $plugin['enabled']) : ?>
							<a href="<?= Request::base("/admin/plugins/{$plugin['file']}/disable") ?>" class="btn-warning" icon="fas fa-fw fa-plug-circle-plus" title="<?= l('disable') ?>">
								<i class="fas fa-fw fa-plug-circle-minus"></i>
								<span class="visually-hidden"><?= l('disable') ?></span>
							</a>
						<?php elseif ($plugin['installed'] && !$plugin['enabled']) : ?>
							<a href="<?= Request::base("/admin/plugins/{$plugin['file']}/enable") ?>" class="btn-success" icon="fas fa-fw fa-plug-circle-plus" title="<?= l('enable') ?>">
								<i class="fas fa-fw fa-plug-circle-plus"></i>
								<span class="visually-hidden"><?= l('enable') ?></span>
							</a>
						<?php endif; ?>

						<?php if ($plugin['installed']) : ?>
							<a href="<?= Request::base("/admin/plugins/{$plugin['file']}/uninstall") ?>" class="btn-danger" icon="fas fa-fw fa-plug-circle-plus" title="<?= l('uninstall') ?>">
								<i class="fas fa-fw fa-plug-circle-xmark"></i>
								<span class="visually-hidden"><?= l('uninstall') ?></span>
							</a>
						<?php else : ?>
							<a href="<?= Request::base("/admin/plugins/{$plugin['file']}/install") ?>" class="btn-success" icon="fas fa-fw fa-plug-circle-plus" title="<?= l('install') ?>">
								<i class="fas fa-fw fa-plug-circle-xmark"></i>
								<span class="visually-hidden"><?= l('install') ?></span>
							</a>
						<?php endif; ?>
					</div>
				</td>
			</tr>
		<?php endforeach; ?>
	</tbody>
</table>
